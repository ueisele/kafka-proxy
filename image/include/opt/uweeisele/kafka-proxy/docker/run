#!/usr/bin/env bash
. /opt/uweeisele/kafka-proxy/docker/bash-config

# Set environment values if they exist as arguments
if [ $# -ne 0 ]; then
  echo "===> Overriding env params with args ..."
  for var in "$@"
  do
    export "$var"
  done
fi

echo "===> OS"
cat /etc/os-release

echo "===> Java"
java -version

echo "===> User"
id

echo "===> Configuring ..."
/opt/uweeisele/kafka-proxy/docker/configure

echo "===> Launching ... "
exec /opt/uweeisele/kafka-proxy/docker/launch
